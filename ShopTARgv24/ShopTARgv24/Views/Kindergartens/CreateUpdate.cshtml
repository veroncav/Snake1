@model ShopTARgv24.Models.Kindergartens.KindergartenCreateUpdateViewModel

@{
    var isUpdate = Model.Id.HasValue;
    var actionName = isUpdate ? "Update" : "Create";
}

<div class="container mt-5">
    <div class="col-lg-8 mx-auto">
        <div class="card shadow-lg border-0 rounded-3">

            <div class="card-header @(isUpdate ? "bg-primary" : "bg-success") text-white text-center">
                <h1>@(isUpdate ? "Update" : "Create")</h1>
            </div>

            <div class="card-body p-4">

                <form asp-action="@actionName" asp-controller="Kindergartens" method="post" enctype="multipart/form-data" class="mb-4">
                    @Html.AntiForgeryToken()

                    <input asp-for="Id" type="hidden" />
                    <input asp-for="CreatedAt" type="hidden" />
                    <input asp-for="UpdatedAt" type="hidden" />

                    <div class="form-group row m-3">
                        <label asp-for="GroupName" class="col-sm-3 col-form-label">Group name</label>
                        <div class="col-sm-9">
                            <input asp-for="GroupName" class="form-control" />
                            <span asp-validation-for="GroupName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row m-3">
                        <label asp-for="ChildrenCount" class="col-sm-3 col-form-label">Children count</label>
                        <div class="col-sm-9">
                            <input asp-for="ChildrenCount" class="form-control" />
                            <span asp-validation-for="ChildrenCount" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row m-3">
                        <label asp-for="KindergartenName" class="col-sm-3 col-form-label">Kindergarten name</label>
                        <div class="col-sm-9">
                            <input asp-for="KindergartenName" class="form-control" />
                            <span asp-validation-for="KindergartenName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row m-3">
                        <label asp-for="TeacherName" class="col-sm-3 col-form-label">Teacher name</label>
                        <div class="col-sm-9">
                            <input asp-for="TeacherName" class="form-control" />
                            <span asp-validation-for="TeacherName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row m-3">
                        <label asp-for="Files" class="col-sm-3 col-form-label">Images</label>
                        <div class="col-sm-9">
                            <input class="form-control" asp-for="Files" multiple type="file" />
                            <span asp-validation-for="Files" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="m-3">
                        <button type="submit" class="btn btn-success">
                            @(isUpdate ? "Update" : "Create")
                        </button>
                        <a asp-action="Index" asp-controller="Kindergartens" class="btn btn-secondary ms-2">Back</a>
                    </div>
                </form>

                @if (Model.Image != null && Model.Image.Length > 0)
                {
                    <hr />
                    <h5>Images</h5>

                    <div class="d-flex flex-wrap">
                        @foreach (var img in Model.Image)
                        {
                            <div class="position-relative me-4 mb-4">

                                <partial name="_Images" model="img" />

                                <form asp-action="RemoveImage" asp-controller="Kindergartens" method="post"
                                      class="position-absolute"
                                      style="top: 8px; right: 8px;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="ImageId" value="@img.ImageId" />
                                    <input type="hidden" name="KindergartenId" value="@img.KindergartenId" />
                                    <button type="submit"
                                            class="btn btn-dark d-flex align-items-center justify-content-center"
                                            title="Delete image"
                                            style="
                                    width: 28px;
                                    height: 28px;
                                    border-radius: 50%;
                                    background-color: rgba(0, 0, 0, 0.5);
                                    border: none;
                                    color: #fff;
                                    font-size: 16px;
                                    line-height: 1;
                                    padding: 0;
                                 ">
                                        &times;
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}