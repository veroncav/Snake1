@model IEnumerable<ShopTARgv24.Models.Spaceships.SpaceshipsIndexViewModel>

<div class="h1 text-center">Spaceships</div>
<div>
    <a asp-action="create" asp-controller="spaceships" type="submit" class="btn btn-primary m-2">Create</a>
</div>
<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Build Date</th>
                <th scope="col">Crew</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                var rowNumber = 1;
            }
            @foreach (var spaceships in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@spaceships.Name</td>
                    <td>@spaceships.TypeName</td>
                    <td>@spaceships.BuiltDate</td>
                    <td>@spaceships.Crew</td>
                    <td>
                        <a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-secondary">Details</a>
                        <a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-info">Update</a>
                        <a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceships.Id" class="btn btn-outline-danger m-1">Delete</a>
                    </td>
                </tr>
                rowNumber++;
            }
        </tbody>
    </table>
</form>