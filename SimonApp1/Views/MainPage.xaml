<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimonApp1.Views.MainPage"
             BackgroundColor="{AppThemeBinding Light=#ffffff, Dark=#111111}"
             Title="Simon Says">

    <Grid Padding="20" RowDefinitions="Auto,*,Auto">
        <!-- Заголовок -->
        <Label Text="Simon Says"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="{AppThemeBinding Light=Black, Dark=White}"
               Margin="0,10,0,20"/>

        <!-- Игровое поле -->
        <Grid Grid.Row="1" RowSpacing="15" ColumnSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Кнопки 4 цветов -->
            <Button x:Name="GreenButton"
                    Grid.Row="0" Grid.Column="0"
                    BackgroundColor="Green"
                    CornerRadius="20"
                    Clicked="OnColorClicked" />

            <Button x:Name="RedButton"
                    Grid.Row="0" Grid.Column="1"
                    BackgroundColor="Red"
                    CornerRadius="20"
                    Clicked="OnColorClicked" />

            <Button x:Name="YellowButton"
                    Grid.Row="1" Grid.Column="0"
                    BackgroundColor="Yellow"
                    CornerRadius="20"
                    Clicked="OnColorClicked" />

            <Button x:Name="BlueButton"
                    Grid.Row="1" Grid.Column="1"
                    BackgroundColor="Blue"
                    CornerRadius="20"
                    Clicked="OnColorClicked" />
        </Grid>

        <!-- Панель управления -->
        <StackLayout Grid.Row="2" Margin="0,20,0,0" HorizontalOptions="Center">
            <Button x:Name="StartButton"
                    Text="Начать игру"
                    BackgroundColor="{AppThemeBinding Light=#333333, Dark=#dddddd}"
                    TextColor="{AppThemeBinding Light=White, Dark=Black}"
                    Clicked="OnStartClicked"
                    WidthRequest="200"
                    CornerRadius="25"
                    FontSize="18" />

            <Label x:Name="StatusLabel"
                   Text="Нажмите 'Начать игру'"
                   FontSize="16"
                   HorizontalOptions="Center"
                   Margin="0,10,0,0"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />
        </StackLayout>
    </Grid>
</ContentPage>

